программа 1 
#include <stdio.h>
 int main(){
     int a , b, s , p;
     printf("введите число a");
     scanf("%i",&a);
     printf("введите число b");
     scanf("%i", &b);
     s = a  * b;
     p = 2 *(a + b);
     printf ("Периметр равен %i, Площадь равна %i",p , s);
     return 0;
 }
программа 2
#include <stdio.h>
 int main(){
     float d , pi ,l;
  printf("введите диаметр окружности для вычисления длины окружности");
  scanf("%f",&d);
  pi = 3.14;
  l = pi * d ;
  printf("длина окружности равна %f\n", l);
     return 0;
 }
 программа 3
 #include <stdio.h>
 int main(){
     float a ,b ,cr;
  printf("введите число a ");
  scanf("%f",&a);
  printf("введите число b для нахождения среднего арифметического ");
  scanf("%f",&b);
  cr = (a+b)/2 ; 
  printf("среднее арифметическое a и b = %f\n", cr);
     return 0;
 }
программа 4
#include <stdio.h>
#include <math.h>
int main() {
float a , b ,pr, chas,sum,raz,a1,a2 ;
printf("введите число а");
 scanf("%f",&a);
 if (a != 0) {
        printf("введите число b");
    scanf("%f",&b);
    if (b != 0) {
        sum = a+b;
        raz = a-b;
       a1=pow(a,2);
       a2= pow(b,2);
       pr =a1 * a2;
        chas = a1 / a2;
        printf("сумма чисел = %f, разность чисел = %f, произведение квадратов чисел = %f, частное квадратов чисел = %f\n", sum ,raz,pr,chas);
    }
    else {
        printf("программа не работает, так как введён 0");
    }
 }
 else {
        printf("программа не работает, так как введён 0");
    }
    return 0 ;
}
программа 5
#include <stdio.h>
#include <math.h>
#include <stdlib.h> //библиотека , которая нужна для модулей
int main() {
float a , b , sum ,raz,pr,chas ;
printf("введите число а");
 scanf("%f",&a);
 if (a != 0) {
        printf("введите число b");
    scanf("%f",&b);
    if (b != 0) {
        sum = abs(a)+abs(b);
        raz = abs(a)-abs(b);
        pr =abs(a)*abs(b);
        chas = abs(a)/abs(b);
        printf("сумма модулей чисел = %f, разность чисел = %f, произведение модулей чисел = %f, частное модулей чисел = %f\n", sum ,raz,pr,chas);
    }
    else {
        printf("программа не работает, так как введён 0");
    }
 }
 else {
        printf("программа не работает, так как введён 0");
    }
    return 0 ;

}

